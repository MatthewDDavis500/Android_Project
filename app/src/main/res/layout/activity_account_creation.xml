<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accountCreator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountCreationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:id="@+id/createPromptTextView"
        android:textSize="42sp"
        android:text="Create Account"
        android:gravity="center"
        android:layout_margin="16dip"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dip"
        android:textColor="@color/black"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:hint="Username"
        app:layout_constraintTop_toBottomOf="@+id/createPromptTextView"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/userNameEnterEditText"
        android:autofillHints="Please enter username"
        android:textSize="24sp"
        android:inputType="text"
        android:gravity="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:hint="Password"
        app:layout_constraintTop_toBottomOf="@+id/userNameEnterEditText"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/passwordCreateEditText"
        android:autofillHints="Please enter password"
        android:textSize="24sp"
        android:inputType="textPassword"
        android:gravity="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:hint="Confirm Password"
        app:layout_constraintTop_toBottomOf="@+id/passwordCreateEditText"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/passwordConfirmEditText"
        android:autofillHints="Please enter password"
        android:textSize="24sp"
        android:inputType="textPassword"
        android:gravity="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:hint="Admin Code (enter 0)"
        app:layout_constraintTop_toBottomOf="@+id/passwordConfirmEditText"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/adminCodeEditText"
        android:autofillHints="Enter 0 or Admin Code"
        android:textSize="24sp"
        android:inputType="textPassword"
        android:gravity="center"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="105dp"
        app:layout_constraintTop_toBottomOf="@+id/adminCodeEditText"
        android:id="@+id/createButton"
        android:text="Finish!"
        android:textSize="32sp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="105dp"
        app:layout_constraintTop_toBottomOf="@+id/createButton"
        android:id="@+id/backButton"
        android:text="Back"
        android:textSize="32sp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/red"
        />

</androidx.constraintlayout.widget.ConstraintLayout>